<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             x:Class="Workout_Tracker.View.AnalyticsPage"
             x:DataType="vm:AnalyticsViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20,52,20,20" Spacing="24">

            <!-- Header -->
            <Label Text="Analytics"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

            <!-- Date Range Filter -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Start"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    <Border StrokeThickness="0"
                            Padding="12,8"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <DatePicker Date="{Binding StartDate}"
                                    MaximumDate="{Binding EndDate}"
                                    Format="MMM dd, yyyy"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    </Border>
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1" Spacing="4">
                    <Label Text="End"
                           FontSize="12"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    <Border StrokeThickness="0"
                            Padding="12,8"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10" />
                        </Border.StrokeShape>
                        <DatePicker Date="{Binding EndDate}"
                                    MinimumDate="{Binding StartDate}"
                                    Format="MMM dd, yyyy"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    </Border>
                </VerticalStackLayout>
            </Grid>

            <!-- Overview Summary Stats -->
            <VerticalStackLayout Spacing="12">
                <Label Text="OVERVIEW"
                       FontSize="11"
                       CharacterSpacing="1.5"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold" />

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                    <!-- Sessions -->
                    <Border StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding TotalSessionsDisplay}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="Sessions"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Sets -->
                    <Border Grid.Column="1"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding TotalSetsDisplay}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Secondary}" />
                            <Label Text="Sets Completed"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Volume -->
                    <Border Grid.Row="1"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding TotalVolumeDisplay}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="#4A6CF7" />
                            <Label Text="Volume (kg)"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Avg Duration -->
                    <Border Grid.Row="1" Grid.Column="1"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="6">
                            <HorizontalStackLayout Spacing="2">
                                <Label Text="{Binding AvgDurationDisplay}"
                                       FontSize="28"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                <Label Text="min"
                                       FontSize="14"
                                       VerticalOptions="End"
                                       Padding="0,0,0,4"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            </HorizontalStackLayout>
                            <Label Text="Avg Duration"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!-- Muscle Groups Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Muscle Groups"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                <Label Text="Most worked muscles by weighted sets"
                       FontSize="13"
                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                       Margin="0,-8,0,0" />

                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="12"
                        IsVisible="{Binding HasMuscleVolumeData}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <GraphicsView HeightRequest="300"
                                  Drawable="{Binding MuscleVolumeDrawable}" />
                </Border>

                <!-- Empty State -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="20"
                        IsVisible="{Binding HasMuscleVolumeData, Converter={StaticResource InvertedBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Label Text="No muscle data in the selected time range"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                           HorizontalOptions="Center"
                           Padding="0,12" />
                </Border>
            </VerticalStackLayout>

            <!-- Strength Progression Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Strength Progression"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <Picker ItemsSource="{Binding AvailableExercises}"
                        SelectedItem="{Binding SelectedExercise}"
                        Title="Select Exercise"
                        TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                        TitleColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}" />

                <!-- Chart -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="12"
                        IsVisible="{Binding HasProgressionData}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <GraphicsView HeightRequest="260"
                                  Drawable="{Binding ProgressionDrawable}" />
                </Border>

                <!-- Empty State -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="20"
                        IsVisible="{Binding HasProgressionData, Converter={StaticResource InvertedBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Label Text="No progression data for this exercise in the selected time range"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Padding="0,12" />
                </Border>
            </VerticalStackLayout>

            <!-- Plan Adherence Section -->
            <VerticalStackLayout Spacing="12">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Plan Adherence"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    <Label Grid.Column="1"
                           Text="{Binding AdherencePercentDisplay}"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                </Grid>
                <Label Text="Planned vs completed sets per session"
                       FontSize="13"
                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                       Margin="0,-8,0,0" />

                <!-- Chart -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="12"
                        IsVisible="{Binding HasAdherenceData}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <GraphicsView HeightRequest="220"
                                  Drawable="{Binding AdherenceDrawable}" />
                </Border>

                <!-- Empty State -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="20"
                        IsVisible="{Binding HasAdherenceData, Converter={StaticResource InvertedBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Label Text="No session data in the selected time range"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                           HorizontalOptions="Center"
                           Padding="0,12" />
                </Border>
            </VerticalStackLayout>

            <!-- Body Metrics Section -->
            <VerticalStackLayout Spacing="12" IsVisible="{Binding HasBodyMetricData}">
                <Label Text="Body Metrics"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <GraphicsView HeightRequest="220"
                                  Drawable="{Binding BodyMetricDrawable}" />
                </Border>
            </VerticalStackLayout>

            <!-- Bottom Spacing -->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
