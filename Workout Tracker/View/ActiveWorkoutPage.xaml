<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.ActiveWorkoutPage"
             x:DataType="vm:ActiveWorkoutViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Top Bar -->
        <Border StrokeThickness="0"
                Padding="20,16"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                <!-- Back -->
                <Label Text="&#x2190;"
                       FontSize="24"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CancelWorkoutCommand}" />
                    </Label.GestureRecognizers>
                </Label>

                <!-- Title + date -->
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                    <Label Text="{Binding SessionTitle}"
                           FontSize="17"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                    <Label Text="{Binding SessionDateDisplay}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                </VerticalStackLayout>

                <!-- Timer + Progress (active workout) -->
                <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" Spacing="2"
                                     IsVisible="{Binding IsWorkoutActive}">
                    <Label Text="{Binding ElapsedTimeDisplay}"
                           FontSize="17"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           HorizontalTextAlignment="End" />
                    <Label Text="{Binding ProgressDisplay}"
                           FontSize="11"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                           HorizontalTextAlignment="End" />
                </VerticalStackLayout>

                <!-- Duration + Progress (read-only / completed) -->
                <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" Spacing="2"
                                     IsVisible="{Binding IsReadOnly}">
                    <Label Text="{Binding ElapsedDurationDisplay}"
                           FontSize="17"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}"
                           HorizontalTextAlignment="End" />
                    <Label Text="{Binding ProgressDisplay}"
                           FontSize="11"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                           HorizontalTextAlignment="End" />
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Exercise List -->
        <ScrollView Grid.Row="1" Padding="20,16,20,16">
            <VerticalStackLayout BindableLayout.ItemsSource="{Binding Exercises}"
                                 Spacing="14">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="model:ActiveExerciseDisplay">
                        <Border StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                Padding="16">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16" />
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource BlackBrush}"
                                        Offset="0,2"
                                        Radius="8"
                                        Opacity="0.08" />
                            </Border.Shadow>

                            <VerticalStackLayout Spacing="10">

                                <!-- Exercise Header -->
                                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding ExerciseName}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Border StrokeThickness="0"
                                                    Padding="5,1"
                                                    BackgroundColor="{Binding TypeBadgeBg}">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="4" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding TypeDisplay}"
                                                       FontSize="10"
                                                       TextColor="{Binding TypeBadgeTextColor}" />
                                            </Border>
                                            <Label Text="{Binding PrimaryMuscle}"
                                                   FontSize="11"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                                   VerticalOptions="Center" />
                                            <Border StrokeThickness="0"
                                                    Padding="5,1"
                                                    BackgroundColor="{AppThemeBinding Light=#EEF4FF, Dark=#1A2A3D}">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="4" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding RestDisplay}"
                                                       FontSize="10"
                                                       TextColor="{AppThemeBinding Light=#4A6CF7, Dark=#7B9BFF}" />
                                            </Border>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Progress -->
                                    <Label Grid.Column="1"
                                           Text="{Binding CompletedSetCountDisplay}"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}"
                                           VerticalOptions="Center" />

                                    <!-- Expand/Collapse -->
                                    <Label Grid.Column="2"
                                           Text="{Binding IsExpanded, StringFormat='{0}'}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                           VerticalOptions="Center">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding IsExpanded}"
                                                         Value="True">
                                                <Setter Property="Text" Value="&#x25B2;" />
                                            </DataTrigger>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding IsExpanded}"
                                                         Value="False">
                                                <Setter Property="Text" Value="&#x25BC;" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ActiveWorkoutViewModel}}, Path=ToggleExerciseExpandCommand}"
                                                                  CommandParameter="{Binding}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>

                                <!-- Sets (collapsible) -->
                                <VerticalStackLayout Spacing="6"
                                                     IsVisible="{Binding IsExpanded}">

                                    <!-- Rep-based header + rows -->
                                    <VerticalStackLayout Spacing="4"
                                                         IsVisible="{Binding IsTimeBased, Converter={StaticResource InvertedBoolConverter}}">
                                        <Grid ColumnDefinitions="28,60,*,*,44,36" ColumnSpacing="4" Padding="0,4,0,0">
                                            <Label Text="Set" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="1" Text="Target" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="2" Text="Reps" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="3" Text="Weight" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="4" Text="RPE" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="5" Text="" FontSize="10"
                                                   IsVisible="{Binding IsEditable}" />
                                        </Grid>
                                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Sets}" Spacing="4">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate x:DataType="model:ActiveSetDisplay">
                                                    <Grid ColumnDefinitions="28,60,*,*,44,36" ColumnSpacing="4">
                                                        <!-- Set # -->
                                                        <Label Text="{Binding DisplayLabel}" FontSize="13" FontAttributes="Bold"
                                                               HorizontalTextAlignment="Center" VerticalOptions="Center"
                                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                                        <!-- Target -->
                                                        <Label Grid.Column="1" Text="{Binding PlannedRepDisplay}"
                                                               FontSize="12" HorizontalTextAlignment="Center" VerticalOptions="Center"
                                                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                                        <!-- Reps input -->
                                                        <Border Grid.Column="2" StrokeThickness="1"
                                                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                                                Padding="6,0" HeightRequest="38"
                                                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=#252525}">
                                                            <Border.StrokeShape><RoundRectangle CornerRadius="6" /></Border.StrokeShape>
                                                            <Entry Text="{Binding RepsText}" Keyboard="Numeric" Placeholder="reps"
                                                                   IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}"
                                                                   FontSize="14" HorizontalTextAlignment="Center" VerticalOptions="Center" />
                                                        </Border>
                                                        <!-- Weight input -->
                                                        <Border Grid.Column="3" StrokeThickness="1"
                                                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                                                Padding="6,0" HeightRequest="38"
                                                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=#252525}">
                                                            <Border.StrokeShape><RoundRectangle CornerRadius="6" /></Border.StrokeShape>
                                                            <Entry Text="{Binding WeightText}" Keyboard="Numeric" Placeholder="kg"
                                                                   IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}"
                                                                   FontSize="14" HorizontalTextAlignment="Center" VerticalOptions="Center" />
                                                        </Border>
                                                        <!-- RPE input -->
                                                        <Border Grid.Column="4" StrokeThickness="1"
                                                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                                                Padding="4,0" HeightRequest="38"
                                                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=#252525}">
                                                            <Border.StrokeShape><RoundRectangle CornerRadius="6" /></Border.StrokeShape>
                                                            <Entry Text="{Binding RpeText}" Keyboard="Numeric" Placeholder="-"
                                                                   IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}"
                                                                   FontSize="12" HorizontalTextAlignment="Center" VerticalOptions="Center" />
                                                        </Border>
                                                        <!-- Completed checkbox (editable) -->
                                                        <CheckBox Grid.Column="5"
                                                                  IsChecked="{Binding Completed}"
                                                                  Color="{StaticResource Primary}"
                                                                  Scale="0.85"
                                                                  IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}"
                                                                  HorizontalOptions="Center"
                                                                  VerticalOptions="Center"
                                                                  IsVisible="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}" />
                                                        <!-- Completed icon (read-only) -->
                                                        <Label Grid.Column="5"
                                                               Text="{Binding Completed, StringFormat='{0}'}"
                                                               FontSize="16"
                                                               HorizontalTextAlignment="Center"
                                                               VerticalOptions="Center"
                                                               IsVisible="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsReadOnly}">
                                                            <Label.Triggers>
                                                                <DataTrigger TargetType="Label" Binding="{Binding Completed}" Value="True">
                                                                    <Setter Property="Text" Value="&#x2713;" />
                                                                    <Setter Property="TextColor" Value="{StaticResource Primary}" />
                                                                </DataTrigger>
                                                                <DataTrigger TargetType="Label" Binding="{Binding Completed}" Value="False">
                                                                    <Setter Property="Text" Value="&#x2014;" />
                                                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                                                </DataTrigger>
                                                            </Label.Triggers>
                                                        </Label>
                                                    </Grid>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </VerticalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Time-based header + rows -->
                                    <VerticalStackLayout Spacing="4"
                                                         IsVisible="{Binding IsTimeBased}">
                                        <Grid ColumnDefinitions="28,60,*,44,36" ColumnSpacing="4" Padding="0,4,0,0">
                                            <Label Text="Set" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="1" Text="Target" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="2" Text="Duration (s)" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Grid.Column="3" Text="RPE" FontSize="10" FontAttributes="Bold" HorizontalTextAlignment="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                        </Grid>
                                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Sets}" Spacing="4">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate x:DataType="model:ActiveSetDisplay">
                                                    <Grid ColumnDefinitions="28,60,*,44,36" ColumnSpacing="4">
                                                        <!-- Set # -->
                                                        <Label Text="{Binding DisplayLabel}" FontSize="13" FontAttributes="Bold"
                                                               HorizontalTextAlignment="Center" VerticalOptions="Center"
                                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                                        <!-- Target -->
                                                        <Label Grid.Column="1" Text="{Binding PlannedDurationDisplay}"
                                                               FontSize="12" HorizontalTextAlignment="Center" VerticalOptions="Center"
                                                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                                        <!-- Duration input -->
                                                        <Border Grid.Column="2" StrokeThickness="1"
                                                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                                                Padding="6,0" HeightRequest="38"
                                                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=#252525}">
                                                            <Border.StrokeShape><RoundRectangle CornerRadius="6" /></Border.StrokeShape>
                                                            <Entry Text="{Binding DurationText}" Keyboard="Numeric" Placeholder="sec"
                                                                   IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}"
                                                                   FontSize="14" HorizontalTextAlignment="Center" VerticalOptions="Center" />
                                                        </Border>
                                                        <!-- RPE input -->
                                                        <Border Grid.Column="3" StrokeThickness="1"
                                                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                                                Padding="4,0" HeightRequest="38"
                                                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=#252525}">
                                                            <Border.StrokeShape><RoundRectangle CornerRadius="6" /></Border.StrokeShape>
                                                            <Entry Text="{Binding RpeText}" Keyboard="Numeric" Placeholder="-"
                                                                   IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}"
                                                                   FontSize="12" HorizontalTextAlignment="Center" VerticalOptions="Center" />
                                                        </Border>
                                                        <!-- Completed checkbox (editable) -->
                                                        <CheckBox Grid.Column="4"
                                                                  IsChecked="{Binding Completed}"
                                                                  Color="{StaticResource Primary}"
                                                                  Scale="0.85"
                                                                  IsEnabled="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}"
                                                                  HorizontalOptions="Center"
                                                                  VerticalOptions="Center"
                                                                  IsVisible="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsEditable}" />
                                                        <!-- Completed icon (read-only) -->
                                                        <Label Grid.Column="4"
                                                               Text="{Binding Completed, StringFormat='{0}'}"
                                                               FontSize="16"
                                                               HorizontalTextAlignment="Center"
                                                               VerticalOptions="Center"
                                                               IsVisible="{Binding Source={RelativeSource AncestorType={x:Type model:ActiveExerciseDisplay}}, Path=IsReadOnly}">
                                                            <Label.Triggers>
                                                                <DataTrigger TargetType="Label" Binding="{Binding Completed}" Value="True">
                                                                    <Setter Property="Text" Value="&#x2713;" />
                                                                    <Setter Property="TextColor" Value="{StaticResource Primary}" />
                                                                </DataTrigger>
                                                                <DataTrigger TargetType="Label" Binding="{Binding Completed}" Value="False">
                                                                    <Setter Property="Text" Value="&#x2014;" />
                                                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                                                </DataTrigger>
                                                            </Label.Triggers>
                                                        </Label>
                                                    </Grid>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </VerticalStackLayout>
                                    </VerticalStackLayout>

                                </VerticalStackLayout>

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Bar (hidden in read-only mode) -->
        <Border Grid.Row="2"
                StrokeThickness="0"
                Padding="20,12,20,24"
                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
                IsVisible="{Binding IsReadOnly, Converter={StaticResource InvertedBoolConverter}}">
            <Grid>
                <!-- Start Workout button (before starting) -->
                <Button Text="Start Workout"
                        Command="{Binding StartWorkoutCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource Black}"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="52"
                        CornerRadius="12"
                        IsVisible="{Binding IsWorkoutActive, Converter={StaticResource InvertedBoolConverter}}" />

                <!-- Finish Workout button (while active) -->
                <Button Text="Finish Workout"
                        Command="{Binding FinishWorkoutCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource Black}"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="52"
                        CornerRadius="12"
                        IsVisible="{Binding IsWorkoutActive}" />
            </Grid>
        </Border>

    </Grid>

</ContentPage>
