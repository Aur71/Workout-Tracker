<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.DashboardPage"
             x:DataType="vm:DashboardViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20,52,20,20" Spacing="24">

            <!-- Header Section -->
            <Grid ColumnDefinitions="*" Padding="0,0,0,0">
                <VerticalStackLayout Spacing="4">
                    <Label Text="{Binding GreetingText}"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                    <Label Text="{Binding TodayDateDisplay}"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                </VerticalStackLayout>
            </Grid>

            <!-- Today's Sessions Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="TODAY'S WORKOUT"
                       FontSize="11"
                       CharacterSpacing="1.5"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold" />

                <!-- Sessions list -->
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding TodaySessions}"
                                     Spacing="12"
                                     IsVisible="{Binding HasTodaySessions}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="model:DashboardSessionDisplay">
                            <Border StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                    Padding="20">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="16" />
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="{StaticResource BlackBrush}"
                                            Offset="0,2"
                                            Radius="8"
                                            Opacity="0.08" />
                                </Border.Shadow>

                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="14">
                                    <!-- Card Header -->
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                        <Border StrokeThickness="0"
                                                WidthRequest="4"
                                                HeightRequest="36"
                                                BackgroundColor="{Binding DotColor}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="2" />
                                            </Border.StrokeShape>
                                        </Border>
                                        <Label Grid.Column="1"
                                               Text="{Binding ProgramNameDisplay}"
                                               FontSize="20"
                                               FontAttributes="Bold"
                                               VerticalOptions="Center"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                        <Border Grid.Column="2"
                                                StrokeThickness="0"
                                                Padding="10,6"
                                                BackgroundColor="{Binding StatusBadgeBg}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding StatusDisplay}"
                                                   FontSize="12"
                                                   TextColor="{Binding StatusBadgeTextColor}" />
                                        </Border>
                                    </Grid>

                                    <!-- Workout Meta -->
                                    <HorizontalStackLayout Grid.Row="1" Spacing="16">
                                        <Label Text="{Binding ExerciseCountDisplay}"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                        <Label Text="{Binding SetCountDisplay}"
                                               FontSize="14"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                    </HorizontalStackLayout>

                                    <!-- Start / Completed Button -->
                                    <Button Grid.Row="2"
                                            Text="{Binding StartButtonText}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=StartWorkoutCommand}"
                                            CommandParameter="{Binding}"
                                            BackgroundColor="{StaticResource Primary}"
                                            TextColor="{StaticResource Black}"
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HeightRequest="48"
                                            CornerRadius="12"
                                            IsVisible="{Binding IsStartable}" />
                                    <Border Grid.Row="2"
                                            StrokeThickness="0"
                                            Padding="0,12"
                                            BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}"
                                            HeightRequest="48"
                                            IsVisible="{Binding ShowCompletedBadge}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="12" />
                                        </Border.StrokeShape>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=ViewSessionCommand}"
                                                                  CommandParameter="{Binding}" />
                                        </Border.GestureRecognizers>
                                        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                                            <Label Text="&#x2713;"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Primary}" />
                                            <Label Text="Completed · View Details"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Primary}" />
                                        </HorizontalStackLayout>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

                <!-- Empty state -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="20"
                        IsVisible="{Binding HasTodaySessions, Converter={StaticResource InvertedBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Label Text="No sessions scheduled for today"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                           HorizontalOptions="Center"
                           Padding="0,12" />
                </Border>
            </VerticalStackLayout>

            <!-- Quick Stats Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="This Week"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                    <!-- Workouts Stat -->
                    <Border StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding WeeklyWorkoutCount}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="Workouts"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Sets Stat -->
                    <Border Grid.Column="1"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding WeeklySetCount}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Secondary}" />
                            <Label Text="Sets"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>

                    <!-- Volume Stat -->
                    <Border Grid.Column="2"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding WeeklyVolumeDisplay}"
                                   FontSize="32"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="kg Volume"
                                   FontSize="12"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!-- Upcoming Sessions Section -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Upcoming"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <!-- Upcoming list -->
                <VerticalStackLayout BindableLayout.ItemsSource="{Binding UpcomingSessions}"
                                     Spacing="10"
                                     IsVisible="{Binding HasUpcomingSessions}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="model:DashboardSessionDisplay">
                            <Border StrokeThickness="0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                    Padding="16">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                                    <Border StrokeThickness="0"
                                            WidthRequest="50"
                                            HeightRequest="50"
                                            BackgroundColor="{AppThemeBinding Light=#F0F0F5, Dark=#252525}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10" />
                                        </Border.StrokeShape>
                                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="-2">
                                            <Label Text="{Binding DayOfWeekShort}"
                                                   FontSize="10"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Primary}"
                                                   HorizontalOptions="Center" />
                                            <Label Text="{Binding DayNumber}"
                                                   FontSize="20"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                                   HorizontalOptions="Center" />
                                        </VerticalStackLayout>
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                        <Label Text="{Binding ProgramNameDisplay}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                        <HorizontalStackLayout Spacing="6">
                                            <Label Text="{Binding ExerciseCountDisplay}"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Text="·"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Text="{Binding SetCountDisplay}"
                                                   FontSize="13"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </VerticalStackLayout>

                <!-- Empty state -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasUpcomingSessions, Converter={StaticResource InvertedBoolConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Label Text="No upcoming sessions this week"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                           HorizontalOptions="Center"
                           Padding="0,8" />
                </Border>
            </VerticalStackLayout>

            <!-- Bottom Spacing -->
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
