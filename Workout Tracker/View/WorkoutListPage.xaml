<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout_Tracker.View.WorkoutListPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="16">

                <!-- Header -->
                <Label Text="Workouts"
                       FontSize="28"
                       FontAttributes="Bold"
                       Padding="0,20,0,8"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <!-- Workout Card 1 -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Push Day - Chest &amp; Triceps"
                                   FontSize="17"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#FFF0EE, Dark=#3D1A1A}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Hypertrophy"
                                       FontSize="11"
                                       TextColor="{StaticResource Secondary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="16">
                            <Label Text="~45 min"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="6 exercises"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Workout Card 2 -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Pull Day - Back &amp; Biceps"
                                   FontSize="17"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Strength"
                                       FontSize="11"
                                       TextColor="{StaticResource Primary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="16">
                            <Label Text="~50 min"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="7 exercises"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Workout Card 3 -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Leg Day - Quads &amp; Glutes"
                                   FontSize="17"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#FFF0EE, Dark=#3D1A1A}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Hypertrophy"
                                       FontSize="11"
                                       TextColor="{StaticResource Secondary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="16">
                            <Label Text="~60 min"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="8 exercises"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Workout Card 4 -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Upper Body - Shoulders"
                                   FontSize="17"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#EEF4FF, Dark=#1A2A3D}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Endurance"
                                       FontSize="11"
                                       TextColor="{StaticResource Tertiary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="16">
                            <Label Text="~40 min"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="5 exercises"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Action Button -->
        <Border Grid.Row="1"
                StrokeThickness="0"
                WidthRequest="56"
                HeightRequest="56"
                Margin="0,0,20,24"
                HorizontalOptions="End"
                BackgroundColor="{StaticResource Primary}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="{StaticResource BlackBrush}"
                        Offset="0,4"
                        Radius="12"
                        Opacity="0.2" />
            </Border.Shadow>
            <Label Text="+"
                   FontSize="28"
                   TextColor="{StaticResource Black}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Border>
    </Grid>

</ContentPage>
