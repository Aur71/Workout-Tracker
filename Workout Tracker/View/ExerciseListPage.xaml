<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout_Tracker.View.ExerciseListPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="16">

                <!-- Header -->
                <Label Text="Exercises"
                       FontSize="28"
                       FontAttributes="Bold"
                       Padding="0,20,0,0"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <!-- Search Bar -->
                <Border StrokeThickness="1"
                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                        Padding="12,0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="Auto,*">
                        <Label Text="&#x1F50D;"
                               FontSize="16"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                        <Entry Grid.Column="1"
                               Placeholder="Search exercises..."
                               PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               Margin="8,0,0,0" />
                    </Grid>
                </Border>

                <!-- Filter Chips -->
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                    <HorizontalStackLayout Spacing="8">
                        <!-- All - Selected -->
                        <Border StrokeThickness="0"
                                Padding="14,8"
                                BackgroundColor="{StaticResource Primary}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Label Text="All"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Black}" />
                        </Border>
                        <!-- Compound -->
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                Padding="14,8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Label Text="Compound"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                        </Border>
                        <!-- Isolation -->
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                Padding="14,8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Label Text="Isolation"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                        </Border>
                        <!-- Cardio -->
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                Padding="14,8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Label Text="Cardio"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                        </Border>
                        <!-- Mobility -->
                        <Border StrokeThickness="1"
                                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                Padding="14,8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <Label Text="Mobility"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />
                        </Border>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Exercise Cards -->

                <!-- Exercise 1: Bench Press -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExerciseTapped" />
                    </Border.GestureRecognizers>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Bench Press"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Compound"
                                       FontSize="11"
                                       TextColor="{StaticResource Primary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="12">
                            <Label Text="Barbell"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="·"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            <Label Text="Chest"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Exercise 2: Incline Dumbbell Press -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExerciseTapped" />
                    </Border.GestureRecognizers>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Incline Dumbbell Press"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Compound"
                                       FontSize="11"
                                       TextColor="{StaticResource Primary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="12">
                            <Label Text="Dumbbell"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="·"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            <Label Text="Chest"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Exercise 3: Cable Flyes -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExerciseTapped" />
                    </Border.GestureRecognizers>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Cable Flyes"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#FFF0EE, Dark=#3D1A1A}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Isolation"
                                       FontSize="11"
                                       TextColor="{StaticResource Secondary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="12">
                            <Label Text="Cable"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="·"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            <Label Text="Chest"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Exercise 4: Tricep Pushdown -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExerciseTapped" />
                    </Border.GestureRecognizers>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Tricep Pushdown"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#FFF0EE, Dark=#3D1A1A}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Isolation"
                                       FontSize="11"
                                       TextColor="{StaticResource Secondary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="12">
                            <Label Text="Cable"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="·"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            <Label Text="Triceps"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Exercise 5: Pull-ups -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExerciseTapped" />
                    </Border.GestureRecognizers>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Pull-ups"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Compound"
                                       FontSize="11"
                                       TextColor="{StaticResource Primary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="12">
                            <Label Text="Bodyweight"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="·"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            <Label Text="Back"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Exercise 6: Barbell Row -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExerciseTapped" />
                    </Border.GestureRecognizers>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Barbell Row"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Compound"
                                       FontSize="11"
                                       TextColor="{StaticResource Primary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="12">
                            <Label Text="Barbell"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="·"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            <Label Text="Back"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Exercise 7: Running -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExerciseTapped" />
                    </Border.GestureRecognizers>
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Running"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border Grid.Column="1"
                                    StrokeThickness="0"
                                    Padding="8,4"
                                    BackgroundColor="{AppThemeBinding Light=#EEF4FF, Dark=#1A2A3D}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <Label Text="Cardio"
                                       FontSize="11"
                                       TextColor="{StaticResource Tertiary}" />
                            </Border>
                        </Grid>
                        <HorizontalStackLayout Grid.Row="1" Spacing="12">
                            <Label Text="No Equipment"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Text="·"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            <Label Text="Full Body"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Action Button -->
        <Border Grid.Row="1"
                StrokeThickness="0"
                WidthRequest="56"
                HeightRequest="56"
                Margin="0,0,20,24"
                HorizontalOptions="End"
                BackgroundColor="{StaticResource Primary}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="{StaticResource BlackBrush}"
                        Offset="0,4"
                        Radius="12"
                        Opacity="0.2" />
            </Border.Shadow>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnAddExerciseTapped" />
            </Border.GestureRecognizers>
            <Label Text="+"
                   FontSize="28"
                   TextColor="{StaticResource Black}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Border>
    </Grid>

</ContentPage>
