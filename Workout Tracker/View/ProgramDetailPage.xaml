<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.ProgramDetailPage"
             x:DataType="vm:ProgramDetailViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Padding="20,20,20,0" ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="0">
            <Label Text="Back"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2"
                   Text="Share"
                   FontSize="15"
                   Padding="0,0,12,0"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ExportProgramCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <BoxView Grid.Column="3"
                     WidthRequest="1"
                     HeightRequest="16"
                     Color="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                     VerticalOptions="Center" />
            <Label Grid.Column="4"
                   Text="Duplicate"
                   FontSize="15"
                   Padding="12,0,12,0"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding DuplicateCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <BoxView Grid.Column="5"
                     WidthRequest="1"
                     HeightRequest="16"
                     Color="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                     VerticalOptions="Center" />
            <Label Grid.Column="6"
                   Text="Edit"
                   Padding="12,0,0,0"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding EditCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20,16,20,20">
            <VerticalStackLayout Spacing="20"
                                 x:DataType="vm:ProgramDetailViewModel">

                <!-- Program Header -->
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="Auto,*"
                          x:DataType="model:ProgramDisplay"
                          BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=Program}">
                        <Border StrokeThickness="0"
                                WidthRequest="6"
                                HeightRequest="50"
                                BackgroundColor="{Binding BarColor}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="3" />
                            </Border.StrokeShape>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" Spacing="4" Margin="16,0,0,0">
                            <Label Text="{Binding Name}"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="{Binding Goal}"
                                   FontSize="14"
                                   IsVisible="{Binding HasGoal}"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Meta Info -->
                    <HorizontalStackLayout Spacing="12"
                                           x:DataType="model:ProgramDisplay"
                                           BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=Program}">
                        <Border StrokeThickness="0"
                                Padding="10,6"
                                BackgroundColor="{Binding StatusBadgeBg}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Label Text="{Binding StatusDisplay}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{Binding StatusBadgeTextColor}" />
                        </Border>
                        <Label Text="{Binding DateRangeDisplay}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                        <Label Text="·"
                               FontSize="14"
                               IsVisible="{Binding HasDuration}"
                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               VerticalOptions="Center" />
                        <Label Text="{Binding DurationDisplay}"
                               FontSize="14"
                               IsVisible="{Binding HasDuration}"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Progress Card (only for active programs with end date) -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasDuration}"
                        x:DataType="vm:ProgramDetailViewModel">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="10"
                                         x:DataType="model:ProgramDisplay"
                                         BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=Program}">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="{Binding WeekProgressDisplay}"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Grid.Column="1"
                                   Text="{Binding ProgressPercentDisplay}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}" />
                        </Grid>
                        <Border StrokeThickness="0"
                                HeightRequest="6"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark=#252525}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="3" />
                            </Border.StrokeShape>
                            <ProgressBar Progress="{Binding ProgressFraction}"
                                         ProgressColor="{StaticResource Primary}"
                                         HeightRequest="6" />
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Session Stats Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding TotalSessions}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="Sessions"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="{Binding PlannedSessions}"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Primary}" />
                            <Label Text="Planned"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Notes Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasNotes}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Notes"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="{Binding Program.Notes}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Sessions Section -->
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Sessions"
                               FontSize="18"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                        <Button Grid.Column="1"
                                Text="+ Add Session"
                                Command="{Binding AddSessionCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                FontSize="14"
                                FontAttributes="Bold"
                                Padding="0"
                                HeightRequest="32" />
                    </Grid>

                    <!-- No sessions placeholder -->
                    <Label Text="No sessions scheduled yet"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                           HorizontalOptions="Center"
                           Padding="0,12"
                           IsVisible="{Binding HasSessions, Converter={StaticResource InvertedBoolConverter}}" />

                    <!-- Session list -->
                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Sessions}"
                                         Spacing="8">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="model:SessionDisplay">
                                <Border StrokeThickness="1"
                                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                        Padding="14,12"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=OpenSessionCommand}"
                                                              CommandParameter="{Binding}" />
                                    </Border.GestureRecognizers>
                                    <Grid ColumnDefinitions="*,Auto,Auto,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="4">
                                        <Label Text="{Binding DateDisplay}"
                                               FontSize="15"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                        <!-- Completed badge -->
                                        <Border Grid.Column="1"
                                                StrokeThickness="0"
                                                Padding="8,3"
                                                BackgroundColor="{Binding CompletedBadgeBg}"
                                                VerticalOptions="Center"
                                                IsVisible="{Binding ShowCompletedBadge}">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="6" />
                                            </Border.StrokeShape>
                                            <Label Text="Completed"
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding CompletedBadgeTextColor}" />
                                        </Border>
                                        <!-- Duplicate button -->
                                        <Label Grid.Column="2"
                                               Text="&#x2750;"
                                               FontSize="22"
                                               Padding="6"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               HorizontalTextAlignment="Center"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                               VerticalOptions="Center">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=DuplicateSessionCommand}"
                                                                      CommandParameter="{Binding}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <!-- Delete button -->
                                        <Label Grid.Column="3"
                                               Text="&#x2715;"
                                               FontSize="22"
                                               Padding="6"
                                               WidthRequest="40"
                                               HeightRequest="40"
                                               HorizontalTextAlignment="Center"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                               VerticalOptions="Center">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=DeleteSessionCommand}"
                                                                      CommandParameter="{Binding}" />
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <HorizontalStackLayout Grid.Row="1" Spacing="8">
                                            <Label Text="{Binding ExerciseCountDisplay}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                            <Label Text="·"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                            <Label Text="{Binding SetCountDisplay}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                        </HorizontalStackLayout>
                                        <Label Grid.Row="2" Grid.ColumnSpan="4"
                                               Text="{Binding TagsDisplay}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light=#4A6CF7, Dark=#7B93F7}"
                                               IsVisible="{Binding HasTags}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Reset Progress Button -->
                <Button Text="Reset Progress"
                        Command="{Binding ResetCompletionCommand}"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource Warning}"
                        BorderWidth="1.5"
                        TextColor="{StaticResource Warning}"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="44"
                        Margin="0,8,0,0" />

                <!-- Delete Button -->
                <Button Text="Delete Program"
                        Command="{Binding DeleteCommand}"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource Error}"
                        BorderWidth="1.5"
                        TextColor="{StaticResource Error}"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="44" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
