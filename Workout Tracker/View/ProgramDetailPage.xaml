<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout_Tracker.View.ProgramDetailPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Padding="20,20,20,0" ColumnDefinitions="Auto,*,Auto">
            <Label Text="Back"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2"
                   Text="Edit"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEditTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20,16,20,20">
            <VerticalStackLayout Spacing="20">

                <!-- Program Header -->
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="Auto,*">
                        <Border StrokeThickness="0"
                                WidthRequest="6"
                                HeightRequest="50"
                                BackgroundColor="{StaticResource Primary}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="3" />
                            </Border.StrokeShape>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" Spacing="4" Margin="16,0,0,0">
                            <Label Text="Strength Block"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="Build maximal strength"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Meta Info -->
                    <HorizontalStackLayout Spacing="12">
                        <Border StrokeThickness="0"
                                Padding="10,6"
                                BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Label Text="Active"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}" />
                        </Border>
                        <Label Text="Jan 6 - Feb 16, 2025"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                        <Label Text="·"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               VerticalOptions="Center" />
                        <Label Text="6 weeks"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Progress Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="18"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="Sessions"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="9"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Primary}" />
                            <Label Text="Completed"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" Spacing="4">
                            <Label Text="9"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Secondary}" />
                            <Label Text="Remaining"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Notes Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Notes"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="Focus on progressive overload. Increase weight by 2.5kg each week on main lifts. Deload on week 6 if needed."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Schedule Section -->
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Schedule"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                        <Button Grid.Column="1"
                                Text="+ Add Session"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                FontSize="13"
                                Padding="0"
                                HeightRequest="30" />
                    </Grid>

                    <!-- Week 3 (Current) -->
                    <VerticalStackLayout Spacing="8">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="Week 3"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Border StrokeThickness="0"
                                    Padding="6,2"
                                    BackgroundColor="{StaticResource Primary}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="4" />
                                </Border.StrokeShape>
                                <Label Text="Current"
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Black}" />
                            </Border>
                        </HorizontalStackLayout>

                        <!-- Session Cards for Week 3 -->
                        <Border StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                Padding="14">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <VerticalStackLayout WidthRequest="36" HorizontalOptions="Center">
                                    <Label Text="MON"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{StaticResource Primary}" />
                                    <Label Text="20"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Push Day - Chest &amp; Triceps"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="6 exercises · ~45 min"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </VerticalStackLayout>
                                <Border Grid.Column="2"
                                        StrokeThickness="0"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        BackgroundColor="{StaticResource Success}"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Label Text="&#x2713;"
                                           FontSize="12"
                                           TextColor="{StaticResource White}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                </Border>
                            </Grid>
                        </Border>

                        <Border StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                Padding="14">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <VerticalStackLayout WidthRequest="36" HorizontalOptions="Center">
                                    <Label Text="WED"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{StaticResource Primary}" />
                                    <Label Text="22"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Pull Day - Back &amp; Biceps"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="7 exercises · ~50 min"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </VerticalStackLayout>
                                <Border Grid.Column="2"
                                        StrokeThickness="2"
                                        Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        BackgroundColor="Transparent"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                </Border>
                            </Grid>
                        </Border>

                        <Border StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                Padding="14">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <VerticalStackLayout WidthRequest="36" HorizontalOptions="Center">
                                    <Label Text="FRI"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{StaticResource Primary}" />
                                    <Label Text="24"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Leg Day - Quads &amp; Glutes"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="8 exercises · ~60 min"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </VerticalStackLayout>
                                <Border Grid.Column="2"
                                        StrokeThickness="2"
                                        Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                                        WidthRequest="24"
                                        HeightRequest="24"
                                        BackgroundColor="Transparent"
                                        VerticalOptions="Center">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                </Border>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Week 4 (Upcoming) -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Week 4"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                        <Border StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                Padding="14">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <VerticalStackLayout WidthRequest="36" HorizontalOptions="Center">
                                    <Label Text="MON"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                    <Label Text="27"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Push Day - Chest &amp; Triceps"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="6 exercises · ~45 min"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                        <Border StrokeThickness="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                Padding="14">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <VerticalStackLayout WidthRequest="36" HorizontalOptions="Center">
                                    <Label Text="WED"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                                    <Label Text="29"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                    <Label Text="Pull Day - Back &amp; Biceps"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="7 exercises · ~50 min"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
