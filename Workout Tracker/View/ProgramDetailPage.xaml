<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.ProgramDetailPage"
             x:DataType="vm:ProgramDetailViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Padding="20,20,20,0" ColumnDefinitions="Auto,*,Auto">
            <Label Text="Back"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2"
                   Text="Edit"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding EditCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20,16,20,20">
            <VerticalStackLayout Spacing="20"
                                 x:DataType="vm:ProgramDetailViewModel">

                <!-- Program Header -->
                <VerticalStackLayout Spacing="12">
                    <Grid ColumnDefinitions="Auto,*"
                          x:DataType="model:ProgramDisplay"
                          BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=Program}">
                        <Border StrokeThickness="0"
                                WidthRequest="6"
                                HeightRequest="50"
                                BackgroundColor="{Binding BarColor}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="3" />
                            </Border.StrokeShape>
                        </Border>
                        <VerticalStackLayout Grid.Column="1" Spacing="4" Margin="16,0,0,0">
                            <Label Text="{Binding Name}"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="{Binding Goal}"
                                   FontSize="14"
                                   IsVisible="{Binding HasGoal}"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Meta Info -->
                    <HorizontalStackLayout Spacing="12"
                                           x:DataType="model:ProgramDisplay"
                                           BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=Program}">
                        <Border StrokeThickness="0"
                                Padding="10,6"
                                BackgroundColor="{Binding StatusBadgeBg}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Label Text="{Binding StatusDisplay}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{Binding StatusBadgeTextColor}" />
                        </Border>
                        <Label Text="{Binding DateRangeDisplay}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                        <Label Text="Â·"
                               FontSize="14"
                               IsVisible="{Binding HasDuration}"
                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               VerticalOptions="Center" />
                        <Label Text="{Binding DurationDisplay}"
                               FontSize="14"
                               IsVisible="{Binding HasDuration}"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Progress Card (only for active programs with end date) -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasDuration}"
                        x:DataType="vm:ProgramDetailViewModel">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="10"
                                         x:DataType="model:ProgramDisplay"
                                         BindingContext="{Binding Source={RelativeSource AncestorType={x:Type vm:ProgramDetailViewModel}}, Path=Program}">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="{Binding WeekProgressDisplay}"
                                   FontSize="13"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Label Grid.Column="1"
                                   Text="{Binding ProgressPercentDisplay}"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}" />
                        </Grid>
                        <Border StrokeThickness="0"
                                HeightRequest="6"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark=#252525}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="3" />
                            </Border.StrokeShape>
                            <ProgressBar Progress="{Binding ProgressFraction}"
                                         ProgressColor="{StaticResource Primary}"
                                         HeightRequest="6" />
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Session Stats Card (static for now) -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="0"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="Sessions"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="0"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Primary}" />
                            <Label Text="Completed"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2" Spacing="4">
                            <Label Text="0"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{StaticResource Secondary}" />
                            <Label Text="Remaining"
                                   FontSize="11"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Notes Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasNotes}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Notes"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="{Binding Program.Notes}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Schedule Section (static placeholder for now) -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Schedule"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                    <Label Text="No sessions scheduled yet"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                           HorizontalOptions="Center"
                           Padding="0,12" />
                </VerticalStackLayout>

                <!-- Delete Button -->
                <Button Text="Delete Program"
                        Command="{Binding DeleteCommand}"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource Error}"
                        BorderWidth="1.5"
                        TextColor="{StaticResource Error}"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="44"
                        Margin="0,8,0,0" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
