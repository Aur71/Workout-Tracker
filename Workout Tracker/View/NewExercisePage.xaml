<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.NewExercisePage"
             x:DataType="vm:NewExerciseViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto">

        <!-- Form Content -->
        <ScrollView Padding="14,0,14,16">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <VerticalStackLayout Spacing="8" Padding="0,20,0,0">
                    <Label Text="Cancel"
                           FontSize="15"
                           TextColor="{StaticResource Primary}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CancelCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="PageTitle"
                           Text="New Exercise"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                </VerticalStackLayout>

                <!-- Basic Info Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="20">

                        <!-- Name Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Name"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Entry Placeholder="e.g. Bench Press"
                                       Text="{Binding Name}"
                                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Exercise Type Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Type"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Picker Title="Select type"
                                        SelectedItem="{Binding ExerciseType}">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Compound</x:String>
                                            <x:String>Isolation</x:String>
                                            <x:String>Cardio</x:String>
                                            <x:String>Mobility</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Equipment Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Equipment"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Entry Placeholder="e.g. Barbell, Dumbbell, Cable"
                                       Text="{Binding Equipment}"
                                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Time Based Toggle -->
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Time-based exercise"
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                <Label Text="Track by duration instead of reps"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            </VerticalStackLayout>
                            <Switch Grid.Column="1"
                                    IsToggled="{Binding IsTimeBased}"
                                    VerticalOptions="Center" />
                        </Grid>

                    </VerticalStackLayout>
                </Border>

                <!-- Description Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="20">

                        <!-- Description Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Description"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,8"
                                    HeightRequest="80"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Editor Placeholder="Brief description of the exercise..."
                                        Text="{Binding Description}"
                                        PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                        AutoSize="TextChanges" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Instructions Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Instructions"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,8"
                                    HeightRequest="120"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Editor Placeholder="Step-by-step instructions on how to perform the exercise..."
                                        Text="{Binding Instructions}"
                                        PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                        AutoSize="TextChanges" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Notes Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Notes"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,8"
                                    HeightRequest="80"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Editor Placeholder="Additional notes..."
                                        Text="{Binding Notes}"
                                        PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                        AutoSize="TextChanges" />
                            </Border>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Border>

                <!-- YouTube Video Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="12">
                        <Label Text="YouTube Video"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                        <!-- URL Entry with clear button -->
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Entry Placeholder="Paste YouTube URL..."
                                       Text="{Binding ExampleMedia}"
                                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            </Border>
                            <Label Grid.Column="1"
                                   Text="&#x2715;"
                                   FontSize="18"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                   VerticalOptions="Center"
                                   IsVisible="{Binding HasVideo}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding RemoveVideoCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>

                        <!-- Video preview -->
                        <Border StrokeThickness="0"
                                Padding="0"
                                IsVisible="{Binding HasVideo}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <WebView x:Name="VideoPreview"
                                     Source="{Binding VideoEmbedUrl}"
                                     HeightRequest="200" />
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Target Muscles Section -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="12">
                        <Label Text="Target Muscles"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                        <!-- No muscles placeholder -->
                        <Label Text="No muscles selected"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               HorizontalOptions="Center"
                               Padding="0,8"
                               IsVisible="{Binding HasMuscles, Converter={StaticResource InvertedBoolConverter}}" />

                        <!-- Selected muscles list -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding SelectedMuscles}"
                                             Spacing="8">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="model:MuscleSelection">
                                    <Border StrokeThickness="1"
                                            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                            Padding="12,8"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                                            <Label Text="{Binding Muscle.Name}"
                                                   FontSize="14"
                                                   VerticalOptions="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                            <Border Grid.Column="1"
                                                    StrokeThickness="0"
                                                    Padding="8,2"
                                                    VerticalOptions="Center"
                                                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray600}}">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="4" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Role}"
                                                       FontSize="11"
                                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                                            </Border>
                                            <Label Grid.Column="2"
                                                   Text="&#x2715;"
                                                   FontSize="16"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                                   VerticalOptions="Center">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NewExerciseViewModel}}, Path=RemoveMuscleCommand}"
                                                                          CommandParameter="{Binding}" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <Button Text="+ Select Muscles"
                                Command="{Binding GoToSelectMusclesCommand}"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="1.5"
                                TextColor="{StaticResource Primary}"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="44" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Save Button -->
        <Border Grid.Row="1"
                StrokeThickness="0"
                Padding="14,10,14,20"
                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}">
            <Button Text="Save Exercise"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource Black}"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="52"
                    CornerRadius="12" />
        </Border>

    </Grid>

</ContentPage>
