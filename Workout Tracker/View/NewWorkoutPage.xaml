<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.NewWorkoutPage"
             x:DataType="vm:NewWorkoutViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto">

        <!-- Form Content -->
        <ScrollView Padding="20,0,20,20">
            <VerticalStackLayout Spacing="16">

                <!-- Header -->
                <VerticalStackLayout Spacing="8" Padding="0,20,0,0">
                    <Label Text="Cancel"
                           FontSize="15"
                           TextColor="{StaticResource Primary}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CancelCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label x:Name="PageTitle"
                           Text="New Workout"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                </VerticalStackLayout>

                <!-- Form Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="20">

                        <!-- Name Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Name"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Entry Placeholder="e.g. Push Day - Chest &amp; Triceps"
                                       Text="{Binding Name}"
                                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Goal Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Goal"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Picker Title="Select goal"
                                        SelectedItem="{Binding Goal}">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Strength</x:String>
                                            <x:String>Hypertrophy</x:String>
                                            <x:String>Power</x:String>
                                            <x:String>Endurance</x:String>
                                            <x:String>Recovery</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Duration Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Estimated Duration (minutes)"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,0"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Entry Placeholder="e.g. 45"
                                       Text="{Binding EstimatedDurationText}"
                                       Keyboard="Numeric"
                                       PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" />
                            </Border>
                        </VerticalStackLayout>

                        <!-- Notes Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Notes"
                                   FontSize="13"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                            <Border StrokeThickness="1"
                                    Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                    Padding="12,8"
                                    HeightRequest="100"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Editor Placeholder="Optional notes about this workout..."
                                        Text="{Binding Notes}"
                                        PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                        AutoSize="TextChanges" />
                            </Border>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Border>

                <!-- Exercises Section -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16" />
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="{StaticResource BlackBrush}"
                                Offset="0,2"
                                Radius="8"
                                Opacity="0.08" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="12">
                        <Label Text="Exercises"
                               FontSize="15"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                        <!-- No exercises placeholder -->
                        <Label Text="No exercises added yet"
                               FontSize="13"
                               TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                               HorizontalOptions="Center"
                               Padding="0,8"
                               IsVisible="{Binding HasExercises, Converter={StaticResource InvertedBoolConverter}}" />

                        <!-- Selected exercises list -->
                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding SelectedExercises}"
                                             Spacing="8">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="model:ExerciseSelection">
                                    <Border StrokeThickness="1"
                                            Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                                            Padding="12,8"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8" />
                                        </Border.StrokeShape>
                                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                                            <Label Text="{Binding Exercise.Name}"
                                                   FontSize="14"
                                                   VerticalOptions="Center"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                            <Border Grid.Column="1"
                                                    StrokeThickness="0"
                                                    Padding="6,2"
                                                    VerticalOptions="Center"
                                                    BackgroundColor="{Binding Exercise.TypeBadgeBg}">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="4" />
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Exercise.TypeDisplay}"
                                                       FontSize="11"
                                                       TextColor="{Binding Exercise.TypeBadgeTextColor}" />
                                            </Border>
                                            <Label Grid.Column="2"
                                                   Text="&#x2715;"
                                                   FontSize="16"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                                   VerticalOptions="Center">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NewWorkoutViewModel}}, Path=RemoveExerciseCommand}"
                                                                          CommandParameter="{Binding}" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <Button Text="+ Add Exercises"
                                Command="{Binding GoToAddExercisesCommand}"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource Primary}"
                                BorderWidth="1.5"
                                TextColor="{StaticResource Primary}"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="44" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Save Button -->
        <Border Grid.Row="1"
                StrokeThickness="0"
                Padding="20,12,20,24"
                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}">
            <Button Text="Save Workout"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource Black}"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="52"
                    CornerRadius="12" />
        </Border>

    </Grid>

</ContentPage>
