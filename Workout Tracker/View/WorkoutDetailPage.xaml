<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout_Tracker.View.WorkoutDetailPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Padding="20,20,20,0" ColumnDefinitions="Auto,*,Auto">
            <Label Text="&#x2190;"
                   FontSize="24"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2"
                   Text="Edit"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEditTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20,16,20,20">
            <VerticalStackLayout Spacing="20">

                <!-- Workout Title -->
                <Label Text="Push Day - Chest &amp; Triceps"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <!-- Meta Info -->
                <HorizontalStackLayout Spacing="12">
                    <Border StrokeThickness="0"
                            Padding="10,6"
                            BackgroundColor="{AppThemeBinding Light=#FFF0EE, Dark=#3D1A1A}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6" />
                        </Border.StrokeShape>
                        <Label Text="Hypertrophy"
                               FontSize="12"
                               TextColor="{StaticResource Secondary}" />
                    </Border>
                    <Label Text="~45 min"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                           VerticalOptions="Center" />
                    <Label Text="4 exercises"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Notes Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Notes"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="Focus on mind-muscle connection. Rest 60-90 seconds between sets."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Exercises Section -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Exercises"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                    <!-- Exercise 1 -->
                    <Border StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14">
                            <Border StrokeThickness="0"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="1"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="Bench Press"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                <HorizontalStackLayout Spacing="8">
                                    <Border StrokeThickness="0"
                                            Padding="6,2"
                                            BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>
                                        <Label Text="Compound"
                                               FontSize="11"
                                               TextColor="{StaticResource Primary}" />
                                    </Border>
                                    <Label Text="Chest"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Exercise 2 -->
                    <Border StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14">
                            <Border StrokeThickness="0"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="2"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="Incline Dumbbell Press"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                <HorizontalStackLayout Spacing="8">
                                    <Border StrokeThickness="0"
                                            Padding="6,2"
                                            BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>
                                        <Label Text="Compound"
                                               FontSize="11"
                                               TextColor="{StaticResource Primary}" />
                                    </Border>
                                    <Label Text="Chest"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Exercise 3 -->
                    <Border StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14">
                            <Border StrokeThickness="0"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="3"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="Cable Flyes"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                <HorizontalStackLayout Spacing="8">
                                    <Border StrokeThickness="0"
                                            Padding="6,2"
                                            BackgroundColor="{AppThemeBinding Light=#FFF0EE, Dark=#3D1A1A}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>
                                        <Label Text="Isolation"
                                               FontSize="11"
                                               TextColor="{StaticResource Secondary}" />
                                    </Border>
                                    <Label Text="Chest"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Exercise 4 -->
                    <Border StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                            Padding="16">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14">
                            <Border StrokeThickness="0"
                                    WidthRequest="32"
                                    HeightRequest="32"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8" />
                                </Border.StrokeShape>
                                <Label Text="4"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="Tricep Pushdown"
                                       FontSize="15"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                <HorizontalStackLayout Spacing="8">
                                    <Border StrokeThickness="0"
                                            Padding="6,2"
                                            BackgroundColor="{AppThemeBinding Light=#FFF0EE, Dark=#3D1A1A}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>
                                        <Label Text="Isolation"
                                               FontSize="11"
                                               TextColor="{StaticResource Secondary}" />
                                    </Border>
                                    <Label Text="Triceps"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>

                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
