<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.WorkoutDetailPage"
             x:DataType="vm:WorkoutDetailViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Padding="20,20,20,0" ColumnDefinitions="Auto,*,Auto">
            <Label Text="Back"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2"
                   Text="Edit"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding EditCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20,16,20,20">
            <VerticalStackLayout Spacing="20">

                <!-- Workout Title -->
                <Label Text="{Binding Workout.Name}"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                <!-- Meta Info -->
                <HorizontalStackLayout Spacing="12">
                    <Border StrokeThickness="0"
                            Padding="10,6"
                            IsVisible="{Binding Workout.HasGoal}"
                            BackgroundColor="{Binding Workout.GoalBadgeBg}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6" />
                        </Border.StrokeShape>
                        <Label Text="{Binding Workout.GoalDisplay}"
                               FontSize="12"
                               TextColor="{Binding Workout.GoalBadgeTextColor}" />
                    </Border>
                    <Label Text="{Binding Workout.DurationDisplay}"
                           FontSize="14"
                           IsVisible="{Binding Workout.DurationDisplay, Converter={StaticResource StringNotEmptyConverter}}"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                           VerticalOptions="Center" />
                    <Label Text="{Binding Workout.ExerciseCountDisplay}"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Notes Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasNotes}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Notes"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="{Binding Workout.Notes}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Exercises Section -->
                <VerticalStackLayout Spacing="12" IsVisible="{Binding HasExercises}">
                    <Label Text="Exercises"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                    <VerticalStackLayout BindableLayout.ItemsSource="{Binding Workout.Exercises}"
                                         Spacing="12">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="model:WorkoutExerciseDisplay">
                                <Border StrokeThickness="0"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                                        Padding="16">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="14">
                                        <Border StrokeThickness="0"
                                                WidthRequest="32"
                                                HeightRequest="32"
                                                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}"
                                                VerticalOptions="Center">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8" />
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Order}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Border>
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                            <Label Text="{Binding ExerciseName}"
                                                   FontSize="15"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                            <HorizontalStackLayout Spacing="8">
                                                <Border StrokeThickness="0"
                                                        Padding="6,2"
                                                        BackgroundColor="{Binding TypeBadgeBg}">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="4" />
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding TypeDisplay}"
                                                           FontSize="11"
                                                           TextColor="{Binding TypeBadgeTextColor}" />
                                                </Border>
                                                <Label Text="{Binding PrimaryMuscle}"
                                                       FontSize="12"
                                                       TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                                                       VerticalOptions="Center" />
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Delete Button -->
                <Button Text="Delete Workout"
                        Command="{Binding DeleteCommand}"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource Secondary}"
                        BorderWidth="1.5"
                        TextColor="{StaticResource Secondary}"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="44"
                        Margin="0,8,0,0" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
