<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout_Tracker.View.ExerciseDetailPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Padding="20,20,20,0" ColumnDefinitions="Auto,*,Auto">
            <Label Text="&#x2190;"
                   FontSize="24"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackTapped" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2"
                   Text="Edit"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnEditTapped" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20,16,20,20">
            <VerticalStackLayout Spacing="20">

                <!-- Exercise Title & Type -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Bench Press"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                    <!-- Meta Info -->
                    <HorizontalStackLayout Spacing="12">
                        <Border StrokeThickness="0"
                                Padding="10,6"
                                BackgroundColor="{AppThemeBinding Light=#E8FFF6, Dark=#1A3D33}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Label Text="Compound"
                                   FontSize="12"
                                   TextColor="{StaticResource Primary}" />
                        </Border>
                        <Label Text="Barbell"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Target Muscles Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Target Muscles"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <HorizontalStackLayout Spacing="8">
                            <Border StrokeThickness="0"
                                    Padding="10,6"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <HorizontalStackLayout Spacing="6">
                                    <Label Text="Chest"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="Primary"
                                           FontSize="11"
                                           TextColor="{StaticResource Primary}" />
                                </HorizontalStackLayout>
                            </Border>
                            <Border StrokeThickness="0"
                                    Padding="10,6"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <HorizontalStackLayout Spacing="6">
                                    <Label Text="Triceps"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="Secondary"
                                           FontSize="11"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </HorizontalStackLayout>
                            </Border>
                            <Border StrokeThickness="0"
                                    Padding="10,6"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                                <HorizontalStackLayout Spacing="6">
                                    <Label Text="Shoulders"
                                           FontSize="13"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                    <Label Text="Secondary"
                                           FontSize="11"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                </HorizontalStackLayout>
                            </Border>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Description Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Description"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="The bench press is a compound exercise that primarily targets the chest muscles (pectoralis major), with secondary engagement of the triceps and anterior deltoids."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Instructions Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Instructions"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />

                        <!-- Step 1 -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Border StrokeThickness="0"
                                    WidthRequest="24"
                                    HeightRequest="24"
                                    BackgroundColor="{StaticResource Primary}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="1"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Black}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <Label Grid.Column="1"
                                   Text="Lie flat on a bench with your feet firmly on the ground. Grip the barbell slightly wider than shoulder-width apart."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                   LineHeight="1.4"
                                   VerticalOptions="Center" />
                        </Grid>

                        <!-- Step 2 -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Border StrokeThickness="0"
                                    WidthRequest="24"
                                    HeightRequest="24"
                                    BackgroundColor="{StaticResource Primary}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="2"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Black}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <Label Grid.Column="1"
                                   Text="Unrack the bar and hold it directly above your chest with arms fully extended."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                   LineHeight="1.4"
                                   VerticalOptions="Center" />
                        </Grid>

                        <!-- Step 3 -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Border StrokeThickness="0"
                                    WidthRequest="24"
                                    HeightRequest="24"
                                    BackgroundColor="{StaticResource Primary}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="3"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Black}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <Label Grid.Column="1"
                                   Text="Lower the bar slowly to your mid-chest, keeping your elbows at about 45 degrees from your body."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                   LineHeight="1.4"
                                   VerticalOptions="Center" />
                        </Grid>

                        <!-- Step 4 -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Border StrokeThickness="0"
                                    WidthRequest="24"
                                    HeightRequest="24"
                                    BackgroundColor="{StaticResource Primary}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <Label Text="4"
                                       FontSize="12"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Black}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                            </Border>
                            <Label Grid.Column="1"
                                   Text="Press the bar back up to the starting position, fully extending your arms without locking your elbows."
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                                   LineHeight="1.4"
                                   VerticalOptions="Center" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!-- Notes Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Notes"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="Keep your shoulder blades pinched together throughout the movement. Avoid bouncing the bar off your chest. Use a spotter when lifting heavy."
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
