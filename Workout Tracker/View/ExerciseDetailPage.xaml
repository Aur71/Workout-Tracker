<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Workout_Tracker.ViewModel"
             xmlns:model="clr-namespace:Workout_Tracker.Model"
             x:Class="Workout_Tracker.View.ExerciseDetailPage"
             x:DataType="vm:ExerciseDetailViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource OffBlack}}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <Grid Padding="20,20,20,0" ColumnDefinitions="Auto,*,Auto">
            <Label Text="Back"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label Grid.Column="2"
                   Text="Edit"
                   FontSize="15"
                   TextColor="{StaticResource Primary}"
                   VerticalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding EditCommand}" />
                </Label.GestureRecognizers>
            </Label>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20,16,20,20">
            <VerticalStackLayout Spacing="20">

                <!-- Exercise Title & Type -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="{Binding Exercise.Name}"
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />

                    <!-- Meta Info -->
                    <HorizontalStackLayout Spacing="12">
                        <Border StrokeThickness="0"
                                Padding="10,6"
                                BackgroundColor="{Binding Exercise.TypeBadgeBg}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6" />
                            </Border.StrokeShape>
                            <Label Text="{Binding Exercise.TypeDisplay}"
                                   FontSize="12"
                                   TextColor="{Binding Exercise.TypeBadgeTextColor}" />
                        </Border>
                        <Label Text="{Binding Exercise.EquipmentDisplay}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Video Preview Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasVideo}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Example Video"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Border StrokeThickness="0" Padding="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <WebView x:Name="VideoPreview"
                                     Source="{Binding Exercise.VideoEmbedUrl}"
                                     HeightRequest="220" />
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Target Muscles Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding HasMuscles}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Target Muscles"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <FlexLayout BindableLayout.ItemsSource="{Binding Exercise.Muscles}"
                                    Wrap="Wrap"
                                    Direction="Row">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="model:MuscleDisplay">
                                    <Border StrokeThickness="0"
                                            Padding="10,6"
                                            Margin="0,0,8,8"
                                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark=#252525}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="6" />
                                        </Border.StrokeShape>
                                        <HorizontalStackLayout Spacing="6">
                                            <Label Text="{Binding Name}"
                                                   FontSize="13"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                                            <Label Text="{Binding Role}"
                                                   FontSize="11"
                                                   IsVisible="{Binding IsPrimary}"
                                                   TextColor="{Binding IsPrimary, Converter={StaticResource SelectedBorderConverter}}" />
                                        </HorizontalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Description Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding Exercise.Description, Converter={StaticResource StringNotEmptyConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Description"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="{Binding Exercise.Description}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Instructions Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding Exercise.Instructions, Converter={StaticResource StringNotEmptyConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Instructions"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="{Binding Exercise.Instructions}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Notes Card -->
                <Border StrokeThickness="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource CardBackground}}"
                        Padding="16"
                        IsVisible="{Binding Exercise.Notes, Converter={StaticResource StringNotEmptyConverter}}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Notes"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        <Label Text="{Binding Exercise.Notes}"
                               FontSize="14"
                               TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                               LineHeight="1.4" />
                    </VerticalStackLayout>
                </Border>

                <!-- Delete Button -->
                <Button Text="Delete Exercise"
                        Command="{Binding DeleteCommand}"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource Error}"
                        BorderWidth="1.5"
                        TextColor="{StaticResource Error}"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="44" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
