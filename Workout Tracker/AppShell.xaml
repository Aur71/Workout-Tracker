<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Workout_Tracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Workout_Tracker.View"
    Title="Workout Tracker">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            Icon="tab_dashboard.svg"
            ContentTemplate="{DataTemplate view:DashboardPage}"
            Route="Dashboard" />

        <ShellContent
            Title="Programs"
            Icon="tab_programs.svg"
            ContentTemplate="{DataTemplate view:ProgramListPage}"
            Route="Programs" />

        <ShellContent
            Title="Analytics"
            Icon="tab_analytics.svg"
            ContentTemplate="{DataTemplate view:AnalyticsPage}"
            Route="Analytics" />

        <ShellContent
            Title="Calendar"
            Icon="tab_calendar.svg"
            ContentTemplate="{DataTemplate view:CalendarPage}"
            Route="Calendar" />

        <ShellContent
            Title="Logs"
            Icon="tab_logs.svg"
            ContentTemplate="{DataTemplate view:LogListPage}"
            Route="Logs" />

        <ShellContent
            Title="Exercises"
            Icon="tab_exercises.svg"
            ContentTemplate="{DataTemplate view:ExerciseListPage}"
            Route="Exercises" />

        <ShellContent
            Title="Settings"
            Icon="tab_settings.svg"
            ContentTemplate="{DataTemplate view:SettingsPage}"
            Route="Settings" />
    </TabBar>

</Shell>
