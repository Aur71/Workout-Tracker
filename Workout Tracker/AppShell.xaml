<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Workout_Tracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Workout_Tracker.View"
    Title="Workout Tracker">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate view:DashboardPage}"
            Route="Dashboard" />

        <ShellContent
            Title="Workouts"
            ContentTemplate="{DataTemplate view:WorkoutListPage}"
            Route="Workouts" />

        <ShellContent
            Title="Exercises"
            ContentTemplate="{DataTemplate view:ExerciseListPage}"
            Route="Exercises" />
    </TabBar>

</Shell>
