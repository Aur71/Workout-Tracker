<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Fitness-focused Color Palette -->

    <!-- Primary Accent - Energetic Teal -->
    <Color x:Key="Primary">#00D9A5</Color>
    <Color x:Key="PrimaryDark">#00B88A</Color>
    <Color x:Key="PrimaryDarkText">#1A1A1A</Color>

    <!-- Secondary - Warm Coral for highlights -->
    <Color x:Key="Secondary">#FF6B5B</Color>
    <Color x:Key="SecondaryDarkText">#FF6B5B</Color>

    <!-- Tertiary - Deep Blue for contrast -->
    <Color x:Key="Tertiary">#4A6CF7</Color>

    <!-- Base Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#0D0D0D</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#0A1628</Color>

    <!-- Card & Surface Colors -->
    <Color x:Key="CardBackground">#1A1A1A</Color>
    <Color x:Key="CardBackgroundLight">#F8F9FA</Color>
    <Color x:Key="SurfaceLight">#F5F5F7</Color>
    <Color x:Key="SurfaceDark">#141414</Color>

    <!-- Gray Scale -->
    <Color x:Key="Gray100">#E8E8E8</Color>
    <Color x:Key="Gray200">#D1D1D1</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#8A8A8A</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#4A4A4A</Color>
    <Color x:Key="Gray700">#333333</Color>
    <Color x:Key="Gray900">#1A1A1A</Color>
    <Color x:Key="Gray950">#0D0D0D</Color>

    <!-- Semantic Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#9CA3AF</Color>
    <Color x:Key="TextMuted">#6B7280</Color>
    <Color x:Key="TextPrimaryLight">#1A1A1A</Color>
    <Color x:Key="TextSecondaryLight">#6B7280</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

</ResourceDictionary>
